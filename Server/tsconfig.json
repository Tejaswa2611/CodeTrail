{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": false,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": false,
        "types": ["node"],
        "typeRoots": ["./node_modules/@types"],
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "prisma"
    ]
}